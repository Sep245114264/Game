            // 显示物品的购买价格
            draw_text(x+8+(j*32)+32, y+40+floor(i/6)*32+32+80+text_height*count, string("购买价格：")+string(obj_bag.item_data[item_site[i, ITEM_INDEX], ITEM_VALUE]) );
