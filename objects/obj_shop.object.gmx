draw_set_font(font_text);
draw_set_colour(c_black);
var max_width, text_length;
j = 0;
for( i = 0; i &lt; 36; i += 1 )
{
    if( j == 6 )
    {
        j = 0;
    }
    max_width = 200;
    // 当鼠标指向物品时，显示物品的详细信息
    if( mouse_in_relion( x+8+(j*32), y+40+floor(i/6)*32, x+8+(j*32)+32, y+40+floor(i/6)*32+32 ) )
    {
        if( item_site[i, ITEM_INDEX] )
        {
            var index, item_type;
            index =  0;
            count = separate_attribute(obj_bag.item_data[item_site[i, ITEM_INDEX],ITEM_EFFECT]);
            item_type = display_item_type(obj_bag.item_data[item_site[i, ITEM_INDEX], ITEM_TYPE]);
            if( !count )
            {
                        count = 1;
            }
            text_length = string_length(obj_bag.item_data[item_site[i,  ITEM_INDEX], ITEM_DESCRIBE]);
            text_height = string_height(obj_bag.item_data[item_site[i,  ITEM_INDEX], ITEM_DESCRIBE]);
            text_type_length = string_length(item_type);
            // 显示物品选中框
            draw_rectangle_colour(x+8+(j*32), y+40+floor(i/6)*32, x+8+(j*32)+32, y+40+floor(i/6)*32+32, c_fuchsia, c_fuchsia, c_fuchsia, c_fuchsia, true);

            // 物品显示框
            draw_rectangle_colour(x+8+(j*32)+32, y+40+floor(i/6)*32+32, x+8+(j*32)+32+max_width, y+40+floor(i/6)*32+32+100+text_height*count, c_white, c_white, c_gray, c_gray, false);
            // 物品的名字
            if( item_site[i, ITEM_INDEX] == 29 )
            {
                draw_text(x+8+(j*32)+32+(max_width/2-20*(text_length/2)) + 20*3, y+40+floor(i/6)*32+32, obj_bag.item_data[item_site[i, ITEM_INDEX],ITEM_DESCRIBE]);
            }
            else
            {
                draw_text(x+8+(j*32)+32+(max_width/2-20*(text_length/2)), y+40+floor(i/6)*32+32, obj_bag.item_data[item_site[i, ITEM_INDEX],ITEM_DESCRIBE]);
            }
            // 物品的种类
            draw_text(x+8+(j*32)+32+(max_width-text_type_length*20), y+40+floor(i/6)*32+32+30, item_type);
            // 分割线
            draw_line_colour(x+8+(j*32)+32, y+40+floor(i/6)*32+32+30, x+8+(j*32)+32+max_width, y+40+floor(i/6)*32+32+30, c_teal, c_teal);
            // 物品的详细信息
            if( count-1 )
            {
                for( index = 0; index &lt; count; index += 1)
                {
                    draw_text(x+8+(j*32)+32, y+40+floor(i/6)*32+32+50+string_height(variable[index])*index, variable[index]);//obj_bag.item_data[item_site[i, ITEM_INDEX],ITEM_EFFECT]
                }
            }
            else
            {
                draw_text(x+8+(j*32)+32, y+40+floor(i/6)*32+32+50, obj_bag.item_data[item_site[i, ITEM_INDEX],ITEM_EFFECT]);               
